{
  "manifest_version": 3,
  "name": "Chatbot Extension",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "style.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "chatbot_icon.png",
      "48": "chatbot_icon.png",
      "128": "chatbot_icon.png"
    }
  }
}
